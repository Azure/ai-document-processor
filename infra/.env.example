##############################################################################
# Azure AI Document Processor - Deployment Configuration
# Copy this file to .env and fill in your values
##############################################################################

# Required Parameters
AZURE_SUBSCRIPTION_ID=
AZURE_ENV_NAME=dev
AZURE_LOCATION=eastus2
AZURE_RESOURCE_GROUP=

# Azure OpenAI Location (must be one of the allowed regions)
# Options: East US, East US 2, France Central, Germany West Central, Japan East,
#          Korea Central, North Central US, Norway East, Poland Central, 
#          South Africa North, South Central US, South India, Southeast Asia,
#          Spain Central, Sweden Central, Switzerland North, Switzerland West,
#          UAE North, UK South, West Europe, West US, West US 3
AOAI_LOCATION=East US

# Network and Security Settings
AZURE_NETWORK_ISOLATION=false
AZURE_DEPLOY_VM=false
AZURE_DEPLOY_VPN=false

# VM Password (required if AZURE_DEPLOY_VM=true and AZURE_NETWORK_ISOLATION=true)
# Must be 6-72 characters with uppercase, lowercase, numbers, and special chars
VM_USER_PASSWORD=

# Feature Flags
AI_VISION_ENABLED=false
AOAI_MULTI_MODAL=false

# Function App Configuration
# Options for FUNCTION_APP_HOST_PLAN: FlexConsumption, Dedicated
FUNCTION_APP_HOST_PLAN=FlexConsumption

# SKU depends on the plan type:
# - FlexConsumption: FC1
# - Dedicated: B1, B2, S1, S2, S3, P1v2, P2v2, P3v2
FUNCTION_APP_SKU=FC1

# User Principal ID (auto-detected if not set)
USER_PRINCIPAL_ID=

##############################################################################
# Resource Reuse Configuration
# Set to "true" to reuse existing Azure resources
##############################################################################

# Azure OpenAI
AOAI_REUSE=false
AOAI_RESOURCE_GROUP_NAME=
AOAI_NAME=

# Application Insights
APP_INSIGHTS_REUSE=false
APP_INSIGHTS_RESOURCE_GROUP_NAME=
APP_INSIGHTS_NAME=

# Log Analytics Workspace
LOG_ANALYTICS_WORKSPACE_REUSE=false
LOG_ANALYTICS_WORKSPACE_ID=

# App Service Plan
APP_SERVICE_PLAN_REUSE=false
APP_SERVICE_PLAN_RESOURCE_GROUP_NAME=
APP_SERVICE_PLAN_NAME=

# AI Search
AI_SEARCH_REUSE=false
AI_SEARCH_RESOURCE_GROUP_NAME=
AI_SEARCH_NAME=

# AI Services
AI_SERVICES_REUSE=false
AI_SERVICES_RESOURCE_GROUP_NAME=
AI_SERVICES_NAME=

# Cosmos DB
COSMOS_DB_REUSE=false
COSMOS_DB_RESOURCE_GROUP_NAME=
COSMOS_DB_ACCOUNT_NAME=
COSMOS_DB_DATABASE_NAME=

# Key Vault
KEY_VAULT_REUSE=false
KEY_VAULT_RESOURCE_GROUP_NAME=
KEY_VAULT_NAME=

# Storage Account
STORAGE_REUSE=false
STORAGE_RESOURCE_GROUP_NAME=
STORAGE_NAME=

# Virtual Network
VNET_REUSE=false
VNET_RESOURCE_GROUP_NAME=
VNET_NAME=

# Function Apps
ORCHESTRATOR_FUNCTION_APP_REUSE=false
ORCHESTRATOR_FUNCTION_APP_RESOURCE_GROUP_NAME=
ORCHESTRATOR_FUNCTION_APP_NAME=

DATA_INGESTION_FUNCTION_APP_REUSE=false
DATA_INGESTION_FUNCTION_APP_RESOURCE_GROUP_NAME=
DATA_INGESTION_FUNCTION_APP_NAME=

# App Service
APP_SERVICE_REUSE=false
APP_SERVICE_NAME=
APP_SERVICE_RESOURCE_GROUP_NAME=

# Function App Storage
ORCHESTRATOR_FUNCTION_APP_STORAGE_REUSE=false
ORCHESTRATOR_FUNCTION_APP_STORAGE_NAME=
ORCHESTRATOR_FUNCTION_APP_STORAGE_RESOURCE_GROUP_NAME=

DATA_INGESTION_FUNCTION_APP_STORAGE_REUSE=false
DATA_INGESTION_FUNCTION_APP_STORAGE_NAME=
DATA_INGESTION_FUNCTION_APP_STORAGE_RESOURCE_GROUP_NAME=
